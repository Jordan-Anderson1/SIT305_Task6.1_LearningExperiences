<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7ED1FD"
    android:orientation="vertical"
    tools:context=".QuizActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7ED1FD"
        app:cardBackgroundColor="#7ED1FD"
        android:layout_margin="20dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#87F8F3"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Generated by AI"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/taskNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Generated task number"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/taskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Small description for the generated task"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#436BF0"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. Question 1"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/questionOneDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Question 1 details"
                        android:textSize="18sp"
                        android:textColor="@color/white"/>

                    <RadioGroup
                        android:id="@+id/q1radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <RadioButton
                            android:id="@+id/q1option1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CheckBox"
                            android:textColor="@color/white"/>

                        <RadioButton
                            android:id="@+id/q1option2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CheckBox"
                            android:textColor="@color/white"/>

                        <RadioButton
                            android:id="@+id/q1option3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CheckBox"
                            android:textColor="@color/white"/>

                    </RadioGroup>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#436BF0"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. Question 2"
                        android:textSize="20sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/questionTwoDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Question 2 details"
                        android:textColor="@color/white"/>


                    <RadioGroup
                        android:id="@+id/q2radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/q2option1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CheckBox"
                            android:textColor="@color/white"/>

                        <RadioButton
                            android:id="@+id/q2option2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CheckBox"
                            android:textColor="@color/white"/>

                        <RadioButton
                            android:id="@+id/q2option3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CheckBox"
                            android:textColor="@color/white"/>

                    </RadioGroup>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#436BF0"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="10dp">                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. Question 3"
                        android:textSize="20sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/questionThreeDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Question 3 details"
                        android:textSize="18sp"

                        android:textColor="@color/white"/>

                    <RadioGroup
                        android:id="@+id/q3radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/q3option1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="q3option"/>

                        <RadioButton
                            android:id="@+id/q3option2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="q3option"/>

                        <RadioButton
                            android:id="@+id/q3option3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="q3option"/>
                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#85FD84"
                android:backgroundTintMode="add"
                android:text="Submit"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>